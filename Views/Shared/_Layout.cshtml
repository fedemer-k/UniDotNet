<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Inmobiliario</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .navbar-brand {
            font-weight: bold;
        }
        .nav-link {
            font-weight: 500;
        }
        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
            border-radius: 0.375rem;
        }
        .dropdown-menu {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .main-content {
            min-height: calc(100vh - 120px);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-building me-2"></i>
                Sistema Inmobiliario
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                     
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Persona")">
                            <i class="fas fa-users me-1"></i>
                            Personas
                        </a>
                    </li>
                    
                      
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Propietario")">
                            <i class="fas fa-home me-1"></i>
                            Propietarios
                        </a>
                    </li>
                    
                     
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Inquilino")">
                            <i class="fas fa-user me-1"></i>
                            Inquilinos
                        </a>
                    </li>
                    
                      
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Empleado")">
                            <i class="fas fa-briefcase me-1"></i>
                            Empleados
                        </a>
                    </li>
                </ul>
                
                 
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-1"></i>
                            Usuario
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

     
    <main class="main-content">
    <br>
        @RenderBody()
    </main>

     Footer 
    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <span class="text-muted">
                <i class="fas fa-building me-1"></i>
                Sistema Inmobiliario &copy; @DateTime.Now.Year
            </span>
        </div>
    </footer>

     Bootstrap JS 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @* Sección para scripts específicos de páginas *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
