@{
    ViewData["Title"] = "Modificación de Propietarios";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Modificación de Propietarios
                    </h3>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Funcionalidad No Implementada</h5>
                        <p class="mb-0">@ViewBag.Message</p>
                    </div>

                     Explicación técnica 
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-lightbulb me-2"></i>¿Por qué no se puede modificar?
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <h6>Razones de Diseño:</h6>
                                    <ul>
                                        <li><strong>Integridad Referencial:</strong> Los propietarios mantienen únicamente la relación PropietarioId-PersonaId.</li>
                                        <li><strong>Separación de Responsabilidades:</strong> Los datos personales se gestionan desde el módulo de Personas.</li>
                                        <li><strong>Consistencia:</strong> Evita duplicación y conflictos de datos entre módulos.</li>
                                        <li><strong>Trazabilidad:</strong> Preserva el historial de relaciones entre entidades.</li>
                                    </ul>

                                    <h6 class="mt-3">Arquitectura del Sistema:</h6>
                                    <div class="alert alert-light">
                                        <code>
                                            Persona (datos personales) ← PropietarioId-PersonaId → Propietario (rol)
                                        </code>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                             Acciones alternativas 
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>¿Qué puedo hacer?
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        @if (ViewBag.PropietarioId != null)
                                        {
                                            <a href="@Url.Action("Details", new { id = ViewBag.PropietarioId })" class="btn btn-outline-info">
                                                <i class="fas fa-eye me-2"></i>Ver Detalles
                                            </a>
                                        }
                                        <a href="@Url.Action("Index", "Persona")" class="btn btn-outline-primary">
                                            <i class="fas fa-users me-2"></i>Gestionar Personas
                                        </a>
                                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                            <i class="fas fa-home me-2"></i>Volver a Propietarios
                                        </a>
                                    </div>
                                </div>
                            </div>

                             Información adicional 
                            <div class="card mt-3">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-question-circle me-2"></i>Necesita Ayuda?
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="small">
                                        Si necesita modificar datos personales (nombre, DNI, teléfono, email), 
                                        diríjase al módulo de <strong>Personas</strong>.
                                    </p>
                                    <p class="small">
                                        Si necesita cambiar el rol de una persona, puede dar de baja el 
                                        propietario actual y crear uno nuevo.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
