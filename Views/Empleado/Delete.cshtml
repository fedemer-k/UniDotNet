@model dynamic
@{
    ViewData["Title"] = "Confirmar Baja de Empleado";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Baja de Empleado
                    </h3>
                </div>
                
                <div class="card-body">
                    @* Mensajes de estado *@
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>¿Está seguro?</h5>
                        <p class="mb-0">Esta acción dará de baja al siguiente empleado:</p>
                    </div>

                    @* Información del empleado a dar de baja *@
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-user me-2"></i>Datos del Empleado
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Nombre Completo</label>
                                        <div class="form-control-plaintext fw-bold fs-5">
                                            @Model.NombreCompleto
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label text-muted">DNI</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge bg-secondary fs-6">@Model.Dni</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">ID Empleado</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge bg-warning text-dark">@Model.EmpleadoId</span>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label text-muted">ID Persona</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge bg-secondary">@Model.PersonaId</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Información importante *@
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>Información Importante:</h6>
                        <ul class="mb-0">
                            <li><strong>Baja Lógica:</strong> Esta es una baja lógica, no se eliminan los datos permanentemente.</li>
                            <li><strong>Reversible:</strong> El empleado puede ser reactivado en el futuro si es necesario.</li>
                            <li><strong>Datos Personales:</strong> Los datos de la persona asociada NO se verán afectados.</li>
                            <li><strong>Otros Roles:</strong> Si la persona tiene otros roles (propietario, inquilino), estos se mantienen activos.</li>
                        </ul>
                    </div>

                    @* Formulario de confirmación *@
                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.EmpleadoId" />
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                            <div>
                                <a href="@Url.Action("Details", new { id = Model.EmpleadoId })" class="btn btn-outline-info btn-lg me-2">
                                    <i class="fas fa-eye me-2"></i>Ver Detalles
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fas fa-trash me-2"></i>Confirmar Baja
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
