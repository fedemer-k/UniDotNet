@model List<UniDotNet.Models.PersonaModel>
@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-tie me-2"></i>Gestión de Empleados
                    </h3>
                    <a href="@Url.Action("Create")" class="btn btn-warning">
                        <i class="fas fa-plus me-1"></i>Nuevo Empleado
                    </a>
                </div>
                
                <div class="card-body">
                    @* Formulario de búsqueda *@
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form method="get" class="d-flex">
                                <input type="text" name="search" value="@ViewBag.Search" 
                                       class="form-control me-2" placeholder="Buscar por DNI, nombre o apellido...">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="fas fa-search"></i>
                                </button>
                                @if (!string.IsNullOrEmpty(ViewBag.Search))
                                {
                                    <a href="@Url.Action("Index")" class="btn btn-outline-danger ms-2">
                                        <i class="fas fa-times"></i>
                                    </a>
                                }
                            </form>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                Mostrando @Model.Count de @ViewBag.TotalRegistros empleados
                            </small>
                        </div>
                    </div>

                    @* Mensajes de estado *@
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @* Tabla de empleados *@
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>DNI</th>
                                        <th>Apellido y Nombre</th>
                                        <th>Teléfono</th>
                                        <th>Email</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var empleado in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@empleado.Dni</span>
                                            </td>
                                            <td>
                                                <strong>@empleado.Apellido, @empleado.Nombre</strong>
                                            </td>
                                            <td>
                                                <i class="fas fa-phone me-1 text-muted"></i>@empleado.Telefono
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope me-1 text-muted"></i>@empleado.Email
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("DetailsByPersonaId", new { personaId = empleado.PersonaId })" 
                                                   class="btn btn-info btn-sm me-1" title="Ver detalles">
                                                    <i class="fas fa-eye me-1"></i>Ver
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm" 
                                                        onclick="eliminarEmpleado(@empleado.PersonaId)" title="Dar de baja">
                                                    <i class="fas fa-trash me-1"></i>Baja
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @* Paginación simplificada *@
                        @if (ViewBag.TotalPaginas > 1)
                        {
                            <nav aria-label="Paginación de empleados" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    @* Botón Anterior *@
                                    @if (ViewBag.HasPrevious)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, search = ViewBag.Search })">
                                                <i class="fas fa-chevron-left"></i> Anterior
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">
                                                <i class="fas fa-chevron-left"></i> Anterior
                                            </span>
                                        </li>
                                    }

                                    @* Números de página *@
                                    @{
                                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        int endPage = Math.Min(ViewBag.TotalPaginas, ViewBag.CurrentPage + 2);
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        @if (i == ViewBag.CurrentPage)
                                        {
                                            <li class="page-item active">
                                                <span class="page-link">@i</span>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.Search })">@i</a>
                                            </li>
                                        }
                                    }

                                    @* Botón Siguiente *@
                                    @if (ViewBag.HasNext)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, search = ViewBag.Search })">
                                                Siguiente <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">
                                                Siguiente <i class="fas fa-chevron-right"></i>
                                            </span>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron empleados</h5>
                            @if (!string.IsNullOrEmpty(ViewBag.Search))
                            {
                                <p class="text-muted">No hay resultados para la búsqueda: "<strong>@ViewBag.Search</strong>"</p>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Ver todos los empleados</a>
                            }
                            else
                            {
                                <p class="text-muted">Comience agregando un nuevo empleado</p>
                                <a href="@Url.Action("Create")" class="btn btn-warning">
                                    <i class="fas fa-plus me-1"></i>Crear Empleado
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function eliminarEmpleado(personaId) {
    if (confirm('¿Está seguro de que desea dar de baja este empleado?')) {
        fetch('@Url.Action("DeleteByPersonaId")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: JSON.stringify(personaId)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error al procesar la solicitud');
        });
    }
}
</script>
}
