@model dynamic
@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-tie me-2"></i>Detalles del Empleado
                    </h3>
                    <div>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver al Listado
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.EmpleadoId })" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Dar de Baja
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    @* Mensajes de estado *@
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-8">
                            @* Información del Empleado *@
                            <div class="card mb-4">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-user me-2"></i>Información Personal
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">DNI</label>
                                                <div class="form-control-plaintext">
                                                    <span class="badge bg-secondary fs-6">@Model.Dni</span>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Apellido</label>
                                                <div class="form-control-plaintext fw-bold">@Model.Apellido</div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Nombre</label>
                                                <div class="form-control-plaintext fw-bold">@Model.Nombre</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Teléfono</label>
                                                <div class="form-control-plaintext">
                                                    <i class="fas fa-phone me-2 text-muted"></i>
                                                    <a href="tel:@Model.Telefono" class="text-decoration-none">@Model.Telefono</a>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label text-muted">Email</label>
                                                <div class="form-control-plaintext">
                                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* Información del Sistema *@
                            <div class="card">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-cog me-2"></i>Información del Sistema
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">ID Empleado</label>
                                                <div class="form-control-plaintext">
                                                    <span class="badge bg-warning text-dark">@Model.EmpleadoId</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label text-muted">ID Persona</label>
                                                <div class="form-control-plaintext">
                                                    <span class="badge bg-secondary">@Model.PersonaId</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            @* Panel de Acciones *@
                            <div class="card">
                                <div class="card-header bg-dark text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>Acciones Disponibles
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Details", "Persona", new { id = Model.PersonaId })" 
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-user me-2"></i>Ver Datos de Persona
                                        </a>
                                        <a href="@Url.Action("Edit", "Persona", new { id = Model.PersonaId })" 
                                           class="btn btn-outline-warning">
                                            <i class="fas fa-edit me-2"></i>Editar Datos Personales
                                        </a>
                                        <hr>
                                        <a href="@Url.Action("Edit", new { id = Model.EmpleadoId })" 
                                           class="btn btn-outline-secondary">
                                            <i class="fas fa-info-circle me-2"></i>¿Por qué no puedo editar?
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = Model.EmpleadoId })" 
                                           class="btn btn-outline-danger">
                                            <i class="fas fa-trash me-2"></i>Dar de Baja Empleado
                                        </a>
                                    </div>
                                </div>
                            </div>

                            @* Información Adicional *@
                            <div class="card mt-3">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Información
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="alert alert-info mb-0">
                                        <small>
                                            <strong>Nota:</strong> Los datos personales (DNI, nombre, teléfono, email) 
                                            se modifican desde el módulo de Personas. El empleado mantiene 
                                            únicamente la relación con la persona.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
